<resources>

    <style name="ActivityThemeDark" parent="android:Theme.DeviceDefault">
        <item name="colorAccent">@color/app</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>

    <style name="ActivityThemeLight" parent="android:Theme.DeviceDefault.Light">
        <item name="colorAccent">@color/app</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>

    <style name="DialogThemeDark" parent="android:Theme.DeviceDefault.Dialog">
        <item name="colorAccent">@color/app</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>

    <style name="DialogThemeLight" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="colorAccent">@color/app</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <!-- can't use padding, it won't be overrideable -->
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="Widget.ActivityThemeDark.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.ActivityThemeDark.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
</resources>